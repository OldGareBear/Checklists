<!DOCTYPE html>
<html>
<head>
  <title>Checklists</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
    <li class="nav-button" id="logout">
      <%= button_to "Log out",
                    sessions_url,
                    method: :delete,
                    class: "log-out" %>
    </li>
<% end %>

<%= yield %>

</body>
</html>
